
<div class="col-sm-12">

    <p>Statistikk for bloggen:</p>

    <div class="row">
        <div class="col-sm-3">
            <div class="panel panel-info">
                <!-- Default panel contents -->
                <div class="panel-heading"><i class="glyphicon glyphicon-user"></i> Brukere</div>
                <div class="panel-body">
                    <p>{{ totalNumberOfUsers }}</p>
                </div>
            </div>
        </div>
        <div class="col-sm-3">
            <div class="panel panel-info">
                <!-- Default panel contents -->
                <div class="panel-heading"><i class="glyphicon glyphicon-file"></i> Poster</div>
                <div class="panel-body">
                    <p>{{ totalNumberOfPosts }}</p>
                </div>
            </div>
        </div>

        <div class="col-sm-3">
            <div class="panel panel-info">
                <!-- Default panel contents -->
                <div class="panel-heading"><i class="glyphicon glyphicon-comment"></i> Kommentarer</div>
                <div class="panel-body">
                    <p>{{ totalNumberOfComments }}</p>
                </div>
            </div>
        </div>

        <div class="col-sm-3">
            <div class="panel panel-info">
                <!-- Default panel contents -->
                <div class="panel-heading"><i class="glyphicon glyphicon-eye-open"></i> Lesinger</div>
                <div class="panel-body">
                    <p>{{ totalViews }}</p>
                </div>
            </div>
        </div>

    </div>

    <div class="panel panel-success">
        <!-- Default panel contents -->
        <div class="panel-heading">De mest besøkte postene er</div>
        <div class="panel-body">
            <p>Viser topp 3</p>
        </div>

        <!-- Table -->
        <table class="table">
            <thead>
            <tr>
                <th>Tittel</th>
                <th>Antall besøk</th>
            </tr>
            </thead>
            <tbody>
            {% for post in topPostsByVisits %}
                <tr>
                    <td>{{ post.PostTitle }}</td>
                    <td>{{ post.TimesVisited }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    </div>

    <div class="panel panel-success">
        <!-- Default panel contents -->
        <div class="panel-heading">De mest kommenterte postene er</div>
        <div class="panel-body">
            <p>Viser topp 3</p>
        </div>

        <!-- Table -->
        <table class="table">
            <thead>
            <tr>
                <th>Tittel</th>
                <th>Antall kommentarer</th>
            </tr>
            </thead>
            <tbody>
            {% for post in topPostsByComments %}
                <tr>
                    <td>{{ post.post_title }}</td>
                    <td>{{ post.comments }}</td>
                </tr>
            {% endfor %}

            </tbody>
        </table>
    </div>

    <div class="panel panel-success">
        <!-- Default panel contents -->
        <div class="panel-heading">De mest aktive leserne dine er</div>
        <div class="panel-body">
            <p>Viser topp 3</p>
        </div>

        <!-- Table -->
        <table class="table">
            <thead>
            <tr>
                <th>Brukernavn</th>
                <th>Antall kommentarer</th>
            </tr>
            </thead>
            <tbody>
            {% for commenter in topCommenters %}
                <tr>
                    <td>{{ commenter.username }}</td>
                    <td>{{ commenter.comments }}</td>
                </tr>
            {% endfor %}

            </tbody>
        </table>
    </div>


</div>


