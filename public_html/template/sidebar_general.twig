{% block content %}
    <!-- Blog Sidebar Widgets Column -->
    <br>
    <br>
    <br>
    <br>
    <div class="col-md-4">

        <!-- Blog Search Well -->
        <div class="well">
            <h4>Søk etter en post</h4>
            <div class="input-group">
                <div class="col-md-11" style="padding-right: 0; padding-left: 15px;">
                    <select class="selectpicker form-control" id="find_post2" name="find_post2" data-live-search="true" data-live-search-placeholder="søk etter overskrift">
                        {% for p in postsearch %}
                            <option data-icon="glyphicon glyphicon-list-alt" value="{{ p.Postid }}">{{ p.Posttitle }}</option>
                        {% endfor %}
                    </select>
                </div>
                <div class="col-md-1" style="padding: 0;">
                    <span class="input-group-btn">
                        <button class="btn btn-default" style="border-top-right-radius: 10%; border-bottom-right-radius: 10%;" type="button" id="find_post">Finn</button>
                    </span>
                    <script>
                    $("#find_post").on('click', function(){
                    window.location = "post.php?post=" + $("#find_post2").val();
                    });
                    </script>
                </div>
            </div>
            <script type="text/javascript" src="{{ assets_dir }}/bootstrap-3.3.7/js/bootstrap-select.js" ></script>
            <!-- /.input-group -->
        </div>

        <!-- Blog Categories Well -->
        <div class="well">
            <h4>Blogg Arkiv</h4>
            <div class="row">
                <div class="col-lg-6">
                    <ul class="list-unstyled">
                        <li><a href="#"><i class="glyphicon glyphicon-folder-close archive"> Category Name</i></a>
                        </li>
                        <li><a href="#"><i class="glyphicon glyphicon-folder-close archive"> Category Name</i></a>
                        </li>
                        <li><a href="#"><i class="glyphicon glyphicon-folder-close archive"> Category Name</i></a>
                        </li>
                        <li><a href="#"><i class="glyphicon glyphicon-folder-close archive"> Category Name</i></a>
                        </li>
                    </ul>
                </div>
                <!-- /.col-lg-6 -->
                <div class="col-lg-6">
                    <ul class="list-unstyled">
                        <li><a href="#"><i class="glyphicon glyphicon-folder-close archive"> Category Name</i></a>
                        </li>
                        <li><a href="#"><i class="glyphicon glyphicon-folder-close archive"> Category Name</i></a>
                        </li>
                        <li><a href="#"><i class="glyphicon glyphicon-folder-close archive"> Category Name</i></a>
                        </li>
                        <li><a href="#"><i class="glyphicon glyphicon-folder-close archive"> Category Name</i></a>
                        </li>
                    </ul>
                </div>
                <!-- /.col-lg-6 -->
            </div>
            <!-- /.row -->
        </div>
        <script>
            $(".archive").hover(
                    function () {
                        $(this).removeClass("glyphicon-folder-close");
                        $(this).addClass("glyphicon-folder-open");
                    },
                    function () {
                        $(this).removeClass("glyphicon-folder-open");
                        $(this).addClass("glyphicon-folder-close");
                    }
            );
        </script>

        <!--   Message-board for our users -->
        {% if loginString %}
            <div class="well">
                <h4>Hei {{ user.Firstname }}</h4>
                <p>Du er nå innlogget og skal ha tilgang til alle tjenester som våre brukere har tilgang til.</p>
            </div>
        {% else %}
            <div class="well">
                <h4>OBS - Du er ikke innlogget</h4>
                <p>For å kunne legge igjen kommentarer må du være registrert på siden og innlogget. Men du kan lese så mye du vil uten å være innlogget.</p>
                <p>Velkommen er du uansett!</p>
            </div>
        {% endif %}

    </div>

{% endblock %}